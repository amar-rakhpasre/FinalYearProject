<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/darkslateblue"
    tools:context=".java.HomeFragment">

    <!-- TODO: Update blank fragment layout -->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/withe_backround_profie"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:backgroundTint="@color/lavenderblush"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ticket Booking"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:backgroundTint="#48D9F3"
            android:background="@drawable/login_corner"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To :"
            android:textColor="@color/black"
            android:layout_marginStart="78dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

        <AutoCompleteTextView
            android:id="@+id/searchbar2"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:background="@drawable/edittext_border"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColorHint="@color/black"
            android:elevation="80dp"
            android:textColor="@color/black"
            android:hint="@string/destination"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From :"
            android:textColor="@color/black"
            android:layout_marginStart="78dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

        <AutoCompleteTextView
            android:id="@+id/searchbar1"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:textColorHint="@color/black"
            android:background="@drawable/edittext_border"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:elevation="80dp"
            android:textColor="@color/black"
            android:hint="@string/source"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:inputType="text" />

        <Button
            android:id="@+id/cjourney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/corner"
            android:elevation="50dp"
            android:backgroundTint="@color/lime"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="NEXT..."/>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fregmant_layout"
        android:paddingBottom="95dp"
        android:gravity="bottom">

        <GridLayout
            android:id="@+id/HomeGridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="6dp"
            android:background="@drawable/corner"
            android:backgroundTint="@color/snow"
            android:columnCount="2"
            android:padding="10dp"
            android:rowCount="2">

            <androidx.cardview.widget.CardView
                android:id="@+id/HomeUsingMap"
                android:layout_width="155dp"
                android:layout_height="90dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:backgroundTint="@color/sysYellow"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/baseline_add_location_alt_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Using MAP"
                        android:textAlignment="center"
                        android:textColor="@color/lavender"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/HomeFastBooking"
                android:layout_width="155dp"
                android:layout_height="90dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/sysYellow"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/baseline_book_online_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fast Booking"
                        android:textAlignment="center"
                        android:textColor="@color/lavender"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/HomePlatformTicket"
                android:layout_width="155dp"
                android:layout_height="90dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/sysYellow"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/a_station_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Platform Ticket"
                        android:textAlignment="center"
                        android:textColor="@color/lavender"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/HomeMyBooking"
                android:layout_width="155dp"
                android:layout_height="90dp"
                android:layout_row="1"
                android:layout_margin="8dp"
                android:layout_column="1"
                android:layout_gravity="center"
                android:backgroundTint="@color/sysYellow"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/baseline_collections_bookmark_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Booking"
                        android:textAlignment="center"
                        android:textColor="@color/lavender"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>
    </RelativeLayout>


</FrameLayout>