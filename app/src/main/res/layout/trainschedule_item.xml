<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:id="@+id/recCard"
        app:cardElevation="8dp"
        android:backgroundTint="#E6EBEB"
        app:cardCornerRadius="16dp"
        android:layout_gravity="center_horizontal|center_vertical"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120dp"
            android:paddingStart="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_s"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/skyblue"
            android:orientation="vertical"
            android:weightSum="5.5">

            <TextView
                android:id="@+id/rectime"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Time"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/recFrom"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:paddingStart="8dp"
                android:textColor="@color/black"
                android:gravity="bottom"
                android:text="from"
                android:textStyle="bold"
                android:textSize="12dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@color/skyblue"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:weightSum="5.5">

            <TextView
                android:id="@+id/recStatlionTo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="mumbai"
                android:textColor="@color/black"
                android:background="@drawable/edittext_border"
                android:backgroundTint="@color/deepskyblue"
                android:gravity="center"
                android:elevation="50dp"
                android:textStyle="bold"
                android:textSize="16dp"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:paddingEnd="5dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_r"
                android:backgroundTint="@color/skyblue"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:weightSum="5.5">

                <TextView
                    android:id="@+id/recPlatform"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="PF"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/recTrainNum"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="Train Num"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="10dp"/>


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>